<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ControlFragment">

    <Button android:layout_width="0dp" android:layout_height="100dp"
            android:id="@+id/buttonUp" android:layout_marginTop="45dp"
            android:minHeight="100dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonDown" app:layout_constraintBottom_toTopOf="@+id/buttonDown"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/buttonDown"
            android:text="W" android:textSize="50sp" android:background="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button android:layout_width="0dp" android:layout_height="100dp"
            android:id="@+id/buttonRight"
            android:minHeight="100dp"
            app:layout_constraintStart_toEndOf="@+id/buttonDown"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="165dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="50sp" android:text="D"
            android:background="@color/colorPrimary"/>
    <Button android:layout_width="0dp" android:layout_height="100dp"
            android:minHeight="100dp"
            android:id="@+id/buttonLeft"
            app:layout_constraintEnd_toStartOf="@+id/buttonDown"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="9dp" android:layout_marginRight="9dp"
            android:layout_marginTop="165dp" app:layout_constraintTop_toTopOf="parent" android:text="A"
            android:textSize="50sp" android:background="@color/colorPrimary"/>
    <Button android:layout_width="0dp" android:layout_height="100dp"
            android:id="@+id/buttonDown"
            android:minHeight="100dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonUp" app:layout_constraintStart_toEndOf="@+id/buttonLeft"
            app:layout_constraintEnd_toStartOf="@+id/buttonRight" android:layout_marginBottom="362dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" android:text="S" android:textSize="50sp"
            android:background="@color/colorPrimary" android:layout_marginTop="25dp"/>

    <Button android:layout_width="0dp" android:layout_height="100dp"
            android:id="@+id/buttonStop"
            android:minHeight="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonDown" android:text="STOP" android:textSize="50sp"
            android:background="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>